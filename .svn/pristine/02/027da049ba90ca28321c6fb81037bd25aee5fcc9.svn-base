.container {
  position: relative;
  min-height: 100vh;
  padding: 20px;
  background-color: #f5f5f2;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-bottom: 30px;
  padding: 0 20px;
}

.backButton, .homeButton {
  background: none;
  border: none;
  cursor: pointer;
  padding: 10px;
  transition: transform 0.2s;
  width: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.backButton:hover, .homeButton:hover {
  transform: scale(1.1);
}

.backIcon, .homeIcon {
  width: 30px;
  height: 30px;
}

.logoIcon {
  height: 40px;
  width: auto;
}

.recipes-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20px;
  width: 100%;
  max-width: 800px;
  padding: 20px;
}

.recipe-card {
  background-color: #e6e6e6;
  border-radius: 15px;
  padding: 15px;
  text-align: center;
  cursor: pointer;
  transition: transform 0.2s;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.recipe-card:hover {
  transform: translateY(-5px);
}

.recipe-image-container {
  width: 100%;
  padding-bottom: 100%;
  position: relative;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 15px;
}

.recipe-image-container img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.recipe-card h3 {
  color: #4a4a4a;
  font-size: 1.1rem;
  margin: 10px 0;
  font-weight: 500;
} 