.recipe-detail-container {
  position: relative;
  min-height: 100vh;
  padding: 20px;
  background-color: #ecebe4;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-bottom: 20px;
  padding: 0 20px;
}

.backButton, .homeButton {
  background: none;
  border: none;
  cursor: pointer;
  padding: 10px;
  transition: transform 0.2s;
  width: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.backButton:hover, .homeButton:hover {
  transform: scale(1.1);
}

.backIcon, .homeIcon {
  width: 30px;
  height: 30px;
}

.logoIcon {
  width: 160px;
  height: auto;
  margin: 2rem auto 4rem;
}

.recipe-content {
  flex: 1;
  display: grid;
  flex-direction: column;
  justify-content: center;
  padding: 20px;
  max-width: 800px;
  margin: 0 auto;
  width: 100%;
}

.recipe-title {
  font-size: 2rem;
  color: #4a4a4a;
  text-align: center;
  margin-bottom: 30px;
  font-weight: 600;
}

.recipe-image-wrapper {
  width: 100%;
  max-width: 750px;
  margin: 20px 0;
}

.recipe-main-image {
  width: 100%;
  height: auto;
  display: block;
}

.recipe-header {
  display: flex;
  align-items: center;
  gap: 15px;
  margin-bottom: 30px;
}

.chef-icon {
  width: 50px;
  height: 50px;
  border-radius: 50%;
}

.academy-title {
  font-size: 1.8rem;
  color: #FF0000;
  font-weight: 600;
}

.recipe-info-row {
  display: flex;
  gap: 30px;
  margin-bottom: 20px;
  width: 100%;
}

.difficulty, .yield {
  display: flex;
  align-items: center;
  gap: 10px;
  font-size: 1.2rem;
  color: #4a4a4a;
}

.icon {
  font-size: 1.4rem;
}

.tags-container {
  display: flex;
  gap: 15px;
  margin-bottom: 30px;
  width: 100%;
}

.tag {
  padding: 8px 16px;
  border-radius: 4px;
  font-size: 1rem;
  font-weight: 500;
  text-transform: uppercase;
}

.delivery-tag {
  background-color: #00E5FF;
  color: #000;
}

.classic-tag {
  background-color: #E0E0E0;
  color: #000;
}

.recipe-description {
  font-size: 1.4rem;
  color: #4a4a4a;
  text-align: left;
  margin: 30px 0;
  width: 100%;
}

.recipe-description p {
  margin: 0;
  font-style: italic;
}

.recipe-details {
  width: 100%;
  margin-bottom: 30px;
}

.detail-item {
  display: flex;
  gap: 10px;
  margin-bottom: 10px;
  font-size: 1.2rem;
}

.detail-label {
  font-weight: 600;
  color: #4a4a4a;
}

.detail-value {
  color: #666;
}

.components-section {
  width: 100%;
  margin-bottom: 40px;
}

.components-section h2 {
  font-size: 1.4rem;
  color: #4a4a4a;
  margin-bottom: 20px;
}

.components-list {
  padding-left: 20px;
  margin: 0;
}

.components-list li {
  color: #FF0000;
  font-size: 1.2rem;
  margin-bottom: 10px;
}

.components-list li::marker {
  color: #FF0000;
}

.qr-code-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40px;
}

.qr-code-wrapper {
  width: 150px;
  height: 150px;
  margin-bottom: 15px;
}

.qr-code-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.qr-instruction {
  font-size: 1.2rem;
  color: #4a4a4a;
  text-align: center;
  margin: 0;
}
