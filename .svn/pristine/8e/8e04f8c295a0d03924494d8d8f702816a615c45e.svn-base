.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 2rem;
  background-color: #F5F5F5;
}

.logo {
  width: 160px;
  height: auto;
  margin: 1rem auto 2rem;
}

.backButton {
  /* position: absolute; */
  display: grid;
  top: 2rem;
  left: 2rem;
  background: none;
  border: none;
  cursor: pointer;
  padding: 0.5rem;
}

.backIcon {
  width: 32px;
  height: 32px;
}

.title {
  font-size: 2.5rem;
  color: #4A2222;
  margin: 1rem 0 4rem 0;
  font-family: 'Arial', sans-serif;
  text-align: center;
}

.topicsList {
  display: flex;
  flex-direction: column;
  gap: 4rem;
  max-width: 800px;
  margin: 0 auto;
  width: 100%;
  padding: 0 2rem;
}

.topicItem {
  background-color: #E8E8E8;
  border-radius: 24px;
  padding: 2.5rem 3rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  cursor: pointer;
  transition: all 0.3s ease;
  border: none;
  width: 100%;
  text-align: left;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
  margin: 1.2rem 0;
}

.topicItem::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: rgba(0, 0, 0, 0.05);
}

.topicItem:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.08);
  background-color: #F0F0F0;
}

.topicContent {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  flex: 1;
  padding-right: 3rem;
}

.topicTitle {
  font-size: 1.8rem;
  color: #4A2222;
  margin: 0;
  font-weight: bold;
  letter-spacing: -0.5px;
}

.topicDescription {
  font-size: 1.1rem;
  color: #666666;
  margin: 0;
  letter-spacing: -0.3px;
  max-width: 80%;
}

.nextIcon {
  width: 32px;
  height: 32px;
  background-color: #FFB800;
  padding: 16px;
  border-radius: 50%;
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.topicItem:hover .nextIcon {
  background-color: #FF9500;
  transform: scale(1.1);
}

.videoContainer {
  display: grid;
  place-items: center;
  
  width: 100%;
  max-width: 800px;
  margin: 20px auto;
  
  background-color: #FFFFFF;
  padding: 20px;
  border-radius: 20px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.video {
  width: 100%;
  height: auto;
  border-radius: 10px;
}

@media (max-width: 600px) {
  .container {
    padding: 1.5rem;
  }

  .title {
    font-size: 2rem;
    margin: 1rem 0 3rem 0;
  }

  .topicsList {
    gap: 3rem;
    padding: 0 1rem;
  }

  .topicItem {
    padding: 2rem;
    margin: 0.25rem 0;
  }

  .topicContent {
    padding-right: 1.5rem;
    gap: 0.8rem;
  }

  .topicTitle {
    font-size: 1.5rem;
  }

  .topicDescription {
    font-size: 1rem;
    max-width: 100%;
  }

  .nextIcon {
    width: 28px;
    height: 28px;
    padding: 14px;
  }

  .videoContainer {
    padding: 10px;
    margin: 10px;
  }
} 